# Dolce Fiore - Environment Variables Example
# Copy this file to .env and fill in the actual values
# Never commit the .env file to version control!

# ============================================
# Django Settings
# ============================================

# Django Secret Key (generate a new one for production!)
# You can generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Django Environment (development or production)
# This determines which settings file to use
DJANGO_ENV=production

# Debug Mode (True for development, False for production)
DEBUG=False

# Allowed Hosts (comma-separated list)
# For production, include your domain: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ============================================
# Database Configuration (PostgreSQL)
# ============================================

# Database name
DB_NAME=dolce_db

# Database user
DB_USER=dolce_user

# Database password (use a strong password in production!)
DB_PASSWORD=changeme-strong-password-here

# Database host (use 'db' for Docker, 'localhost' for native)
DB_HOST=db

# Database port
DB_PORT=5432

# ============================================
# CORS Configuration
# ============================================

# CORS Allowed Origins (comma-separated list)
# For production, include your frontend URL: https://yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# ============================================
# Security Settings (Production)
# ============================================

# SSL Redirect (True for production with HTTPS)
SECURE_SSL_REDIRECT=True

# ============================================
# Logging
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# Email Configuration (Optional)
# ============================================

# Email Backend (for sending emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Host
EMAIL_HOST=smtp.gmail.com

# SMTP Port
EMAIL_PORT=587

# Use TLS
EMAIL_USE_TLS=True

# SMTP User (your email)
EMAIL_HOST_USER=your-email@gmail.com

# SMTP Password (app password for Gmail)
EMAIL_HOST_PASSWORD=your-app-password

# Default From Email
DEFAULT_FROM_EMAIL=noreply@dolcefiore.com

# ============================================
# Frontend Configuration (Optional)
# ============================================

# API Base URL for frontend (usually not needed as it uses relative paths)
# VITE_API_BASE_URL=

# ============================================
# Notes
# ============================================
#
# For Development:
# - Set DJANGO_ENV=development
# - Set DEBUG=True
# - Set ALLOWED_HOSTS=localhost,127.0.0.1
# - Set CORS_ALLOWED_ORIGINS=http://localhost:5173
# - DB_HOST can be 'localhost' or 'db' depending on setup
#
# For Production:
# - Set DJANGO_ENV=production
# - Set DEBUG=False
# - Set ALLOWED_HOSTS to your actual domain
# - Set CORS_ALLOWED_ORIGINS to your frontend URL
# - Use strong passwords for SECRET_KEY and DB_PASSWORD
# - Configure SSL/TLS certificates
# - Set up email configuration if needed

# Payment Gateway Env
# RAZORPAY Payment Provider
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret