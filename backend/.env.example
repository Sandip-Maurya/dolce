# Django Settings
# ===============
# SECRET_KEY is REQUIRED - Generate a secure key using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key

# Environment (development or production)
# When set to 'production', production.py settings will be used
DJANGO_ENV=development

# Debug mode (True/False)
# WARNING: Never set DEBUG=True in production!
DEBUG=True

# Allowed hosts (comma-separated)
# For development: localhost,127.0.0.1
# For production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ======================
# For SQLite (development) - leave these empty
# For PostgreSQL (production) - fill in these values

# Database name
DB_NAME=

# Database user
DB_USER=

# Database password
DB_PASSWORD=

# Database host (default: localhost)
DB_HOST=localhost

# Database port (default: 5432 for PostgreSQL)
DB_PORT=5432

# CORS Configuration
# ==================
# Comma-separated list of allowed origins
# For development: http://localhost:5173,http://127.0.0.1:5173
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:5174,http://127.0.0.1:5174

# Security Settings (Production)
# ===============================
# Force HTTPS redirect (True/False) - Set to True in production
SECURE_SSL_REDIRECT=False

# Logging
# =======
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Email Configuration (Optional)
# ==============================
# Email backend (default: django.core.mail.backends.smtp.EmailBackend)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP server host
EMAIL_HOST=smtp.gmail.com

# SMTP server port
EMAIL_PORT=587

# Use TLS (True/False)
EMAIL_USE_TLS=True

# SMTP username
EMAIL_HOST_USER=

# SMTP password
EMAIL_HOST_PASSWORD=

# Default from email address
DEFAULT_FROM_EMAIL=noreply@dolcefiore.com

# Payment Gateway Configuration (Optional)
# ========================================
# Razorpay (if using)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Stripe (if using)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# AWS S3 Configuration (Optional - for media/static files)
# ========================================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=
# AWS_S3_CUSTOM_DOMAIN=
